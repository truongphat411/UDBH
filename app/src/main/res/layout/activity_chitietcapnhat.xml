<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="match_parent"
     android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/imvhinhSP"
            android:src="@drawable/image"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:text="Vui lòng nhập đầy đủ thông tin sản phẩm cần thêm:"
            android:padding="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/edttenSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:hint="Nhập tên sản phẩm"
            />
        <EditText
            android:id="@+id/edtgiaSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:hint="Nhập giá sản phẩm"
            />
        <EditText
            android:id="@+id/edtmotaSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:hint="Nhập mô tả sản phẩm"
            />
        <EditText
            android:id="@+id/edtmathuonghieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:hint="Nhập mã thương hiệu"
            />
        <EditText
            android:id="@+id/edtmadanhmuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:hint="Nhập mã danh mục"
            />
        <EditText
            android:id="@+id/edtsoluongkho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:hint="Nhập số lượng sản phẩm trong kho"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/aqua"
                android:padding="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:id="@+id/btnthemSP"
                android:text="Thêm sản phẩm"
                android:textColor="@color/black"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/btnthemSP"
                android:padding="15dp"
                android:text="Xóa sản phẩm"
                android:backgroundTint="@color/aqua"
                android:textColor="@color/black"
                android:id="@+id/btnxoaSP"
                android:layout_margin="20dp"/>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
